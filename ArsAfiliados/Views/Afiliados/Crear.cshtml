@using System.Linq;
@using ArsAfiliados.Dtos;

@model MostrarAfiliadosDto

@{
    ViewBag.Title = "Listado de afiliados";


    List<SelectListItem> selectListItemsEstados = new List<SelectListItem>();
    List<SelectListItem> selectListItemsPlans = new List<SelectListItem>();

    selectListItemsEstados.AddRange(new SelectListItem[] { new SelectListItem { Text = "Activo", Value = "1" }, new SelectListItem { Text = "Inactivo", Value = "2" } });

    foreach (MostrarPlanesDto planes in ViewBag.planes)
    {
        selectListItemsPlans.Add(new SelectListItem { Text = planes.Plan, Value = planes.Id.ToString() });
    }

}

<div style="width:100%; margin-top:20px;">

    <h2 style="text-align:center;">CREANDO AFILIADO</h2>

</div>

@Html.ActionLink("Volver", "Index", "Home", null, new
{
    @class = "btn btn-primary"
})

<br />
<hr />

<div style="padding:10px; border: 1px solid black; border-radius:6px 3px;">

    @using (Html.BeginForm())
